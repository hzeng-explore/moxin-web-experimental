    <style>
        :root {
            --primary-navy: #1a1d29;
            --accent-blue: #3b82f6;
            --accent-purple: #8b5cf6;
            --text-primary: #ffffff;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --shadow-lg: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        }

        .service-tier {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
            border: 1px solid rgba(59, 130, 246, 0.2);
        }

        .service-tier.featured {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(139, 92, 246, 0.2));
            border-color: var(--accent-blue);
            transform: scale(1.05);
        }

        .deployment-option {
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .deployment-option.active {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
            border-color: var(--accent-blue);
            color: var(--accent-blue);
        }

        .scroll-reveal {
            opacity: 0;
            transform: translateY(30px);
        }

        .scroll-reveal.revealed {
            opacity: 1;
            transform: translateY(0);
            transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }
    </style>

    <script>
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            initializeScrollReveal();
            initializeDeploymentSelector();
            initializeInteractions();
        });

        // Scroll reveal animation
        function initializeScrollReveal() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('revealed');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.scroll-reveal').forEach(el => {
                observer.observe(el);
            });
        }

        // Deployment architecture selector
        function initializeDeploymentSelector() {
            const deploymentOptions = document.querySelectorAll('.deployment-option');
            const architectures = document.querySelectorAll('.deployment-arch');

            deploymentOptions.forEach(option => {
                option.addEventListener('click', () => {
                    // Remove active class from all options
                    deploymentOptions.forEach(opt => {
                        opt.classList.remove('active');
                        opt.classList.remove('border-blue-500');
                    });

                    // Add active class to clicked option
                    option.classList.add('active');
                    option.classList.add('border-blue-500');

                    // Hide all architectures
                    architectures.forEach(arch => {
                        arch.classList.add('hidden');
                    });

                    // Show selected architecture
                    const deploymentType = option.getAttribute('data-deployment');
                    const selectedArch = document.getElementById(`${deploymentType}-arch`);
                    if (selectedArch) {
                        selectedArch.classList.remove('hidden');

                        // Animate architecture appearance
                        if (typeof anime !== 'undefined') {
                            anime({
                                targets: selectedArch,
                                opacity: [0, 1],
                                translateY: [20, 0],
                                duration: 500,
                                easing: 'easeOutCubic'
                            });
                        }
                    }
                });
            });
        }

        // Initialize interactions
        function initializeInteractions() {
            // Card hover effects
            document.querySelectorAll('.card-hover').forEach(card => {
                card.addEventListener('mouseenter', () => {
                    if (typeof anime !== 'undefined') {
                        anime({
                            targets: card,
                            scale: card.classList.contains('featured') ? 1.05 : 1.02,
                            translateY: -4,
                            duration: 300,
                            easing: 'easeOutCubic'
                        });
                    }
                });

                card.addEventListener('mouseleave', () => {
                    if (typeof anime !== 'undefined') {
                        anime({
                            targets: card,
                            scale: card.classList.contains('featured') ? 1.05 : 1,
                            translateY: 0,
                            duration: 300,
                            easing: 'easeOutCubic'
                        });
                    }
                });
            });

            // Button interactions
            document.querySelectorAll('button').forEach(button => {
                button.addEventListener('click', (e) => {
                    const buttonText = e.target.textContent.trim();

                    // Animate button click
                    if (typeof anime !== 'undefined') {
                        anime({
                            targets: e.target,
                            scale: [1, 0.95, 1],
                            duration: 200,
                            easing: 'easeOutCubic'
                        });
                    }

                    // Handle different button actions
                    if (buttonText.includes('Consultation') || buttonText.includes('咨询')) {
                        showDemoModal();
                    } else if (buttonText.includes('Guide') || buttonText.includes('指南')) {
                        downloadServiceGuide();
                    }
                });
            });
        }

        // Demo modal
        function showDemoModal() {
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4';
            modal.innerHTML = `
                <div class="bg-gray-900 rounded-2xl p-8 max-w-md w-full border border-blue-500/30">
                    <div class="text-center mb-6">
                        <h3 class="text-2xl font-bold text-white mb-2">安排咨询</h3>
                        <p class="text-gray-400">获取 AI 实施的专家指导</p>
                    </div>
                    <form class="space-y-4">
                        <input type="text" placeholder="全名" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none">
                        <input type="email" placeholder="工作邮箱" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none">
                        <input type="text" placeholder="公司" class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none">
                        <select class="w-full p-3 bg-gray-800 border border-gray-700 rounded-lg text-white focus:border-blue-500 focus:outline-none">
                            <option>选择服务类型</option>
                            <option>架构设计</option>
                            <option>实施与部署</option>
                            <option>培训与支持</option>
                            <option>定制解决方案</option>
                        </select>
                        <div class="flex space-x-3 pt-4">
                            <button type="submit" class="flex-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-purple-700 transition-all">
                                安排咨询
                            </button>
                            <button type="button" class="close-modal flex-1 border border-gray-600 text-gray-300 py-3 rounded-lg font-semibold hover:border-blue-500 hover:text-blue-400 transition-all">
                                取消
                            </button>
                        </div>
                    </form>
                </div>
            `;

            document.body.appendChild(modal);

            modal.querySelector('.close-modal').addEventListener('click', () => {
                document.body.removeChild(modal);
            });

            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    document.body.removeChild(modal);
                }
            });

            if (typeof anime !== 'undefined') {
                anime({
                    targets: modal.querySelector('div'),
                    scale: [0.8, 1],
                    opacity: [0, 1],
                    duration: 300,
                    easing: 'easeOutCubic'
                });
            }
        }

        // Download service guide
        function downloadServiceGuide() {
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg z-50';
            notification.textContent = '服务指南下载即将推出！';
            document.body.appendChild(notification);

            setTimeout(() => {
                document.body.removeChild(notification);
            }, 3000);

            if (typeof anime !== 'undefined') {
                anime({
                    targets: notification,
                    translateX: [300, 0],
                    opacity: [0, 1],
                    duration: 300,
                    easing: 'easeOutCubic'
                });
            }
        }
    </script>
